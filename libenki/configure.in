# Check for an
AC_CHECK_HEADER([an/Geometry.h],,AC_MSG_ERROR([An library not found. Please install An library. Configure aborted]))

# Checks for typedefs, structures, and compiler characteristics.

# Checks for library functions.
LIBS="-lan $LIBS"
AC_TRY_LINK([#include <an/Types.h>],[An::Color c = An::Color::red;],
        [AC_MSG_NOTICE([checking for liban test program, working])],
        [AC_MSG_ERROR([An library not found. Please install An library. Configure aborted])])


AC_CONFIG_FILES([Makefile
				 enki/Makefile
				 enki/interactions/Makefile
				 enki/robots/Makefile
