AC_PREREQ(2.5)
AC_INIT(libenki, svn, nct@ysagoon.com)
AC_CONFIG_SRCDIR([enki/PhysicalEngine.cpp])
AM_INIT_AUTOMAKE(libenki, svn)

# Set flags
CXXFLAGS="$CXXFLAGS -Wall"

# Checks for programs.
AC_LANG([C++])
AC_PROG_CXX
